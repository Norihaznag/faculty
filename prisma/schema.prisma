// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  role          String    @default("student") // "student", "teacher", "admin"
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  bookmarks     Bookmark[]
  uploads       Upload[]
  lessons       Lesson[]

  @@index([email])
  @@index([role])
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model University {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  city      String
  faculties Faculty[]
  lessons   Lesson[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([slug])
  @@index([city])
}

model Faculty {
  id           String    @id @default(cuid())
  name         String    // e.g., "Faculty of Science"
  slug         String
  university   University @relation(fields: [universityId], references: [id], onDelete: Cascade)
  universityId String
  programs     Program[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@unique([universityId, slug])
  @@index([universityId])
  @@index([slug])
}

model Program {
  id        String    @id @default(cuid())
  name      String    // e.g., "English Studies", "Computer Science"
  slug      String
  faculty   Faculty   @relation(fields: [facultyId], references: [id], onDelete: Cascade)
  facultyId String
  semesters Semester[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([facultyId, slug])
  @@index([facultyId])
  @@index([slug])
}

model Semester {
  id        String    @id @default(cuid())
  name      String    // e.g., "S1", "S2", "Semester 1"
  order     Int       // 1, 2, 3, etc.
  program   Program   @relation(fields: [programId], references: [id], onDelete: Cascade)
  programId String
  subjects  Subject[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@unique([programId, order])
  @@index([programId])
}

model Subject {
  id         String     @id @default(cuid())
  name       String
  slug       String
  semester   Semester?  @relation(fields: [semesterId], references: [id], onDelete: SetNull)
  semesterId String?
  color      String     @default("#3B82F6")
  icon       String?
  lessons    Lesson[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@unique([semesterId, slug])
  @@index([semesterId])
  @@index([slug])
  @@index([name])
}

model Lesson {
  id          String      @id @default(cuid())
  title       String
  slug        String      @unique
  description String?     @db.Text
  content     String?     @db.Text
  published   Boolean     @default(false)
  views       Int         @default(0)
  likes       Int         @default(0)
  difficulty  String      @default("beginner") // "beginner", "intermediate", "advanced"
  duration    Int?        // in minutes
  tags        Tag[]
  subject     Subject     @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  subjectId   String
  university  University  @relation(fields: [universityId], references: [id], onDelete: Cascade)
  universityId String
  author      User?       @relation(fields: [authorId], references: [id], onDelete: SetNull)
  authorId    String?
  modules     Module[]
  resources   Resource[]
  bookmarks   Bookmark[]
  uploads     Upload[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@index([subjectId])
  @@index([universityId])
  @@index([authorId])
  @@index([slug])
  @@index([published])
  @@index([difficulty])
}

model Tag {
  id        String   @id @default(cuid())
  name      String   @unique
  lessons   Lesson[]
  createdAt DateTime @default(now())

  @@index([name])
}

model Module {
  id        String   @id @default(cuid())
  title     String
  content   String?  @db.Text
  order     Int      @default(0)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
  @@index([order])
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  url       String
  type      String   @default("link") // "link", "pdf", "video", "document"
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([lessonId])
  @@index([type])
}

model Bookmark {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId  String
  createdAt DateTime @default(now())

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model Upload {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  fileName    String
  fileUrl     String
  mimeType    String
  size        Int      // in bytes
  status      String   @default("pending") // "pending", "approved", "rejected"
  reason      String?  @db.Text // Reason for approval/rejection
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId    String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([lessonId])
  @@index([userId])
  @@index([status])
}
